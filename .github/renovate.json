{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "default:automergeDigest",
    "docker:pinDigests"
  ],
  "argocd": {
    "fileMatch": [
      "apps/templates/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "apps/templates/.+\\.yaml$"
    ]
  },
  "nix": {
    "enabled": true,
    "fileMatch": [
      "nixos/flake.nix$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "fileMatch": [
        "apps/templates/helm-factorio.yaml$"
      ],
      "matchStrings": [
        "#\\s?renovate: image=(?<depName>.*?)\\s+?tag:\\s?\\\"?(?<currentValue>[\\w+\\.\\-]*)\\\"?"
      ],
      "versioningTemplate": "loose"
    }
  ]
}